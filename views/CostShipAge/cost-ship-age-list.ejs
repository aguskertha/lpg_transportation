<div class="container">
    <div class="forms-container"  align="center">
        <h1 class="text-info mt-3">Cost Ship Age List</h1>
        <div class="position-relative mb-5 mx-4">
            <div class="position-absolute top-0 end-0">
                <!-- <a href="/cost-ship-age/admin/create" class="text-end ms-5 h4 text-decoration-none" role="button"><i class="bi bi-plus-square-fill"></i> Cost Ship Age</a> -->
                <a role="button" class="btn btn-primary btn-lg w-auto" id="btn-cost-ship-age-create" data-bs-toggle="modal" data-bs-target="#modalCostShipAgeEdit" onclick=""><i class="bi bi-plus-square-fill"></i> Cost Ship Age</a>
            </div>
        </div>
        <!-- <br> -->
        <a href="/topic" class="float-start ms-5 h1" style="color:crimson;" role="button"><i class="bi bi-arrow-left-circle-fill"></i></a>
        <div class="row">
            <div class="col-md-12 mt-3" >
              <table class="table caption-top" cellspacing="0" width="100%">
                <thead>
                    <tr class="text-center">
                        <th scope="col">No</th>
                        <th scope="col">_id</th>
                        <th scope="col">Ship Age</th>
                        <th scope="col">Constant Factor</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody id="">
                    <% for( let index = 0; index < costShipAges.length; index++ ) { %>
                        <% const costShipAge = costShipAges[index] %> 
                        <tr style="white-space: nowrap;" class="align-middle text-center">
                        <th scope="row"><%= index+1 %></th>
                        <td><%= costShipAge._id %></td>
                        <td><%= costShipAge.shipAge %></td>
                        <td><%= costShipAge.constantFactor %></td>
                        <td>
                            <a role="button" class="btn btn-warning btn-lg w-auto" id="btn-cost-ship-age-edit" data-bs-toggle="modal" data-bs-target="#modalCostShipAgeEdit" onclick="editCostShipAge('<%- encodeURIComponent(JSON.stringify(costShipAge)) %>')"><i class="bi bi-pencil-square"></i></a>
                            <a href="/cost-ship-age/admin/delete/<%= costShipAge._id %>" onclick="return confirm('Are you sure to delete?')" role="button" class="btn btn-danger btn-lg w-auto"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    <% } %>
                </tbody>
              </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalCostShipAgeEdit" role="dialog">
    <div class="modal-dialog modal-lg bg-light rounded">
        <div class="modal-content" align="center">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Cost Ship Age</h4>
            </div>
            
            <!-- Modal Body -->
                <form action="/cost-ship-age/admin/edit" method="post" class="p-5">
                    <input type="hidden" class="form-control" id="costShipAgeID" name="costShipAgeID" value="" aria-describedby="">
                    <div class="mb-3">
                        <label for="" class="form-label">Ship Age</label>
                        <input type="text" class="form-control" id="shipAge" name="shipAge" aria-describedby="" required>
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label">Constant Factor</label>
                        <input type="number" step="any" class="form-control" id="constantFactor" name="constantFactor" aria-describedby="" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            
            <!-- Modal Footer -->
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.0/js/plugins/buffer.min.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.0/js/plugins/filetype.min.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.0/js/plugins/piexif.min.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.0/js/plugins/sortable.min.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.0/js/fileinput.min.js"></script>
<script>
    function editCostShipAge(costShipAge){
        var costShipAge = JSON.parse(decodeURIComponent(costShipAge))
        var costShipAgeID = $('#costShipAgeID');
        var shipAge = $('#shipAge');
        var constantFactor = $('#constantFactor');
        costShipAgeID.val(costShipAge._id)
        shipAge.val(costShipAge.shipAge)
        constantFactor.val(costShipAge.constantFactor)
    }
</script>