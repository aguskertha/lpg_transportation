        <div class="row">
            <div class="col-md-12 mt-3" >
              <table class="table caption-top" cellspacing="0" width="100%">
                <thead>
                    <tr class="text-center">
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Value</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <% const unitConversion = unitConversions[0] %> 
                <tbody id="">
                    <tr style="white-space: nowrap;" class="align-middle text-center">
                        <th scope="row">1</th>
                        <td>KG to Litre</td>
                        <td><%= unitConversion.KGtoLitre %></td>
                        <td>
                            <a role="button" class="btn btn-warning btn-lg w-auto" id="btn-unit-conversion-edit" data-bs-toggle="modal" data-bs-target="#modalUnitConversionEdit" onclick="editUnitConversion('<%= unitConversion._id %>','<%= unitConversion.KGtoLitre %>', 'KGtoLitre')"><i class="bi bi-pencil-square"></i></a>
                        </td>
                    </tr>
                    <tr style="white-space: nowrap;" class="align-middle text-center">
                        <th scope="row">2</th>
                        <td>CBM to Litre</td>
                        <td><%= unitConversion.CBMtoLitre %></td>
                        <td>
                            <a role="button" class="btn btn-warning btn-lg w-auto" id="btn-unit-conversion-edit" data-bs-toggle="modal" data-bs-target="#modalUnitConversionEdit" onclick="editUnitConversion('<%= unitConversion._id %>','<%= unitConversion.CBMtoLitre %>', 'CBMtoLitre')"><i class="bi bi-pencil-square"></i></a>
                        </td>
                    </tr>
                    <tr style="white-space: nowrap;" class="align-middle text-center">
                        <th scope="row">3</th>
                        <td>KG to MMBTU</td>
                        <td><%= unitConversion.KGtoMMBTU %></td>
                        <td>
                            <a role="button" class="btn btn-warning btn-lg w-auto" id="btn-unit-conversion-edit" data-bs-toggle="modal" data-bs-target="#modalUnitConversionEdit" onclick="editUnitConversion('<%= unitConversion._id %>','<%= unitConversion.KGtoMMBTU %>', 'KGtoMMBTU')"><i class="bi bi-pencil-square"></i></a>
                        </td>
                    </tr>
                    <tr style="white-space: nowrap;" class="align-middle text-center">
                        <th scope="row">4</th>
                        <td>CBM to MT</td>
                        <td><%= unitConversion.CBMtoMT %></td>
                        <td>
                            <a role="button" class="btn btn-warning btn-lg w-auto" id="btn-unit-conversion-edit" data-bs-toggle="modal" data-bs-target="#modalUnitConversionEdit" onclick="editUnitConversion('<%= unitConversion._id %>','<%= unitConversion.CBMtoMT %>', 'CBMtoMT')"><i class="bi bi-pencil-square"></i></a>
                        </td>
                    </tr>
                    <tr style="white-space: nowrap;" class="align-middle text-center">
                        <th scope="row">5</th>
                        <td>USD to IDR</td>
                        <td><%= unitConversion.USDtoIDR %></td>
                        <td>
                            <a role="button" class="btn btn-warning btn-lg w-auto" id="btn-unit-conversion-edit" data-bs-toggle="modal" data-bs-target="#modalUnitConversionEdit" onclick="editUnitConversion('<%= unitConversion._id %>','<%= unitConversion.USDtoIDR %>', 'USDtoIDR')"><i class="bi bi-pencil-square"></i></a>
                        </td>
                    </tr>
                    <tr style="white-space: nowrap;" class="align-middle text-center">
                        <th scope="row">6</th>
                        <td>MT to KG</td>
                        <td><%= unitConversion.MTtoKG %></td>
                        <td>
                            <a role="button" class="btn btn-warning btn-lg w-auto" id="btn-unit-conversion-edit" data-bs-toggle="modal" data-bs-target="#modalUnitConversionEdit" onclick="editUnitConversion('<%= unitConversion._id %>','<%= unitConversion.MTtoKG %>', 'MTtoKG')"><i class="bi bi-pencil-square"></i></a>
                        </td>
                    </tr>
                    <tr style="white-space: nowrap;" class="align-middle text-center">
                        <th scope="row">7</th>
                        <td>KM to MILE</td>
                        <td><%= unitConversion.KMtoMILE %></td>
                        <td>
                            <a role="button" class="btn btn-warning btn-lg w-auto" id="btn-unit-conversion-edit" data-bs-toggle="modal" data-bs-target="#modalUnitConversionEdit" onclick="editUnitConversion('<%= unitConversion._id %>','<%= unitConversion.KMtoMILE %>', 'KMtoMILE')"><i class="bi bi-pencil-square"></i></a>
                        </td>
                    </tr>
                    <tr style="white-space: nowrap;" class="align-middle text-center">
                        <th scope="row">8</th>
                        <td>KM to Nautical MILE</td>
                        <td><%= unitConversion.KMtoNauticalMILE %></td>
                        <td>
                            <a role="button" class="btn btn-warning btn-lg w-auto" id="btn-unit-conversion-edit" data-bs-toggle="modal" data-bs-target="#modalUnitConversionEdit" onclick="editUnitConversion('<%= unitConversion._id %>','<%= unitConversion.KMtoNauticalMILE %>', 'KMtoNauticalMILE')"><i class="bi bi-pencil-square"></i></a>
                        </td>
                    </tr>
                </tbody>
              </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalUnitConversionEdit" role="dialog">
    <div class="modal-dialog modal-lg bg-light rounded">
        <div class="modal-content" align="center">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Unit Conversion</h4>
            </div>
            
            <!-- Modal Body -->
                <form action="/unit-conversion/admin/edit" method="post" class="p-5">
                    <input type="hidden" class="form-control" id="param" name="param" value="" aria-describedby="">
                    <input type="hidden" class="form-control" id="unitConversionID" name="unitConversionID" value="" aria-describedby="">
                    <div class="mb-3">
                        <label for="" class="form-label">Value</label>
                        <input type="text" class="form-control" id="value" name="value" aria-describedby="" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            
            <!-- Modal Footer -->
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.0/js/plugins/buffer.min.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.0/js/plugins/filetype.min.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.0/js/plugins/piexif.min.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.0/js/plugins/sortable.min.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.0/js/fileinput.min.js"></script>
<script>
    function editUnitConversion(unitConversionID, value, param){
        var unitConversionIDField = $('#unitConversionID');
        var paramField = $('#param');
        var valueField = $('#value');
        valueField.val(value)
        unitConversionIDField.val(unitConversionID)
        paramField.val(param)
    }
</script>